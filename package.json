# Удалите старый файл
rm package.json

# Создайте новый и скопируйте в него содержимое
cat > package.json << 'EOF'
{
  "name": "neurovibe",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview"
  },
  "dependencies": {
    "@google/genai": "^1.29.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "workbox-window": "^7.1.0",
    "idb": "^8.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "vite": "^5.3.3",
    "vite-plugin-pwa": "^0.20.0",
    "typescript": "^5.5.3",
    "tailwindcss": "^3.4.4",
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.39",
    "@types/workbox-window": "^4.3.4"
  }
}
EOF

# Проверьте валидность
node -e "JSON.parse(require('fs').readFileSync('package.json', 'utf8'))" && echo "✅ Валидно!"
